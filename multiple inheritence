#include<oistream>
#include<conio.h>
class area
{
    public:
       float area_calc(float l,float b)
       {
          return l*b;
       }
};
class perimeter
{
      public:
       float peri_calc(float l,float b)
       {
           return 2*(l+b);
       }
};
class rectangle : private area, private perimeter
{
     private:
        float length, breadth;
     public:
        rectangle() : length(0.0), breadth(0.0) { }
        void get_data()
        {
            cout<<"Enter length: ";
            cin>>length;
            cout<<"Enter breadth: ";
            cin>>breadth;
        }
        float area_calc()
        {
             return Area::area_calc(length,breadth);
        }
        float peri_calc()
        {
             return perimeter::peri_calc(length,bredth);
        }
 };
 int main()
 {
     clrscr();
        rectangle r;
        r.get_data();
        cout<<"area =<<r.area_calc();
        cout<<"\nperimeter = "<<r.peri_calc();
     getch();
     return 0;
 }
           
